@model Stock.ModelsView.ProductoCarrito

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Producto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DescripcionCategoria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DescripcionCategoria)
        </dd>
    </dl>
</div>
<div>
    <form asp-action="Agregar">
        <input type="hidden" asp-for="Id" />
     <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
    <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
    <a asp-action="Productos">Volver al listado</a>
    </form>
</div>
