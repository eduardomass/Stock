@model Stock.ModelsView.GeneradorJornada

@{
    ViewData["Title"] = "Generacion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Generador de jornadas laborales</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Generacion">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FechaDesde" class="control-label"></label>
                <input asp-for="FechaDesde" class="form-control" />
                <span asp-validation-for="FechaDesde" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaHasta" class="control-label"></label>
                <input asp-for="FechaHasta" class="form-control" />
                <span asp-validation-for="FechaHasta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdTrabajador" class="control-label"></label>
                <select asp-for="IdTrabajador" class="form-control" asp-items="ViewBag.TrabajadorId"></select>
                <span asp-validation-for="IdTrabajador" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CantidadBloques" class="control-label"></label>
                <input asp-for="CantidadBloques" class="form-control" />
                <span asp-validation-for="CantidadBloques" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Generar Jornadas!" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
